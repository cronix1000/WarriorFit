<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="background" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.warriorfit.warriorfit.HomeController">
   <children>
      <BorderPane layoutX="-8.0" layoutY="-1.0" prefHeight="240.0" prefWidth="1286.0">
         <top>
            <Label fx:id="welcomeText" text="Welcome Ethan" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Agency FB Bold" size="81.0" />
               </font>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
         </top>
         <center>
            <Label fx:id="levelLabel" text="Current Level: 0" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Agency FB" size="40.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
      <ImageView fx:id="warriorLogo" fitHeight="276.0" fitWidth="369.0" layoutX="15.0" layoutY="443.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="settingsButton" layoutX="1131.0" layoutY="23.0" mnemonicParsing="false" onAction="#onSettingsButtonClick" text="Settings">

         <font>
            <Font size="25.0" />
         </font>
      </Button>
      <Button fx:id="startButton" layoutX="478.0" layoutY="392.0" mnemonicParsing="false" onAction="#onStartWorkoutButtonClick" prefHeight="82.0" prefWidth="323.0" text="Start Workout">
         <font>
            <Font name="Agency FB Bold" size="42.0" />
         </font>
      </Button>
      <Button fx:id="statisticsButton" layoutX="503.0" layoutY="277.0" mnemonicParsing="false" onAction="#onStatisticsButtonClick" prefHeight="82.0" prefWidth="274.0" text="Statistics">
         <font>
            <Font name="Agency FB Bold" size="42.0" />
         </font>
      </Button>

   </children>
</AnchorPane>
